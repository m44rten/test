<h2 align="center"><%= @user.username %></h2>

<div class=" col-xs-8 col-xs-offset-2">
  <h4 class="center"><strong>User:<strong></h4>
  <hr>
  <%= simple_format(@user.username) %>
  <%= simple_format(@user.email) %>
  <div class="article-actions">
    <%= link_to "edit", edit_user_path(@user), class: "btn btn-xs btn-primary" %>
    <%= link_to "View all", users_path, class: "btn btn-xs btn-success" %>
    <%= link_to "Delete", user_path(@user), method: :delete,
                data: {confirm: "Are you shure"},
                class: "btn btn-xs btn-danger" %>
  </div>
  related articles
</div>
<hr>

<%= render 'articles/article', obj: @user_articles %>
<div class="center">
  <%= will_paginate @user_articles %>
</div>