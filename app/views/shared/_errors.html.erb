
<% if obj.errors.any? %>

<div class="row">
	<div class="col-xs-8">
		<div class="panel panel-danger">
			<div class="panel-heading">
				<h2 class="panel-title">
				<%= pluralize(obj.errors.count, "error") %>
				prohibited the article to save:
				</h2>
				<div class="panel-body">
					<ul>
						<% obj.errors.full_messages.each do |msg| %>
							<li><%= msg %></li>
						<% end %>
					</ul>
					<% end %>
					</div>
				</div>
			</div>
		</div>